<ProgramSelectionHigh>:
  canvas.before:
    Rectangle:
      pos: self.pos
      size: self.size
    Color:
      rgba: 1,1,1,1
  BoxLayout:
    size: root.width, root.height
    orientation: 'vertical'
    Image:
      source: 'logo.png'
      size: self.texture_size
      size_hint_y: 1.5
    Button:
      text: "Wasprogramma 4 (Bus)"
      background_color : button_background_color
      font_size: default_font_size
      color: button_text_color
      on_release:
        root.selectProgram(4)

<ProgramSelection>:
  canvas.before:
    Rectangle:
      pos: self.pos
      size: self.size
    Color:
      rgba: background_color
  BoxLayout:
    size: root.width, root.height
    orientation: 'vertical'
    id: selectionLayout
    Image:
      source: 'logo.png'
      size: self.texture_size
      size_hint_y: 2.8
    Label:
      text: " "
      font_size: heading_font_size
      color: text_color 
        
