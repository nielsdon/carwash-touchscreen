#:set default_font_size "42sp"
#:set heading_font_size "60sp"
#:set error_color 1,0,0,1

<BorderedButton@Button>:
  background_color: app.buttonBackgroundColor
  background_normal: ''  # Disable the default background image
  height: 200
  font_size: default_font_size
  color: app.buttonTextColor

<FullWidthImage@Image>:
  size_hint_y: None
  size_hint_x: None
  width: self.parent.width
  height: self.parent.width/self.image_ratio
  allow_stretch: True  # Allow stretching to fill the width
  keep_ratio: True  # Maintain aspect ratio

<BaseLayout@BoxLayout>:
  canvas.before:
    Color:
      rgba: 1, 1, 1, 1
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: 'vertical'
  spacing: 5
  FullWidthImage:
    source: 'logo.png'

<ProgramSelection>:
  BaseLayout:
    id: selectionLayout
    Label:
      id: test_label
      text: "TEST"
      font_size: '20sp'
      color: error_color
      size_hint: None, None
      size: self.texture_size
      pos_hint: {'x': 0, 'top': 1.0}  # Position top-left corner
      opacity: 1 if app.TEST_MODE else 0  # Conditional visibility
    Label:
      id: welcome_text
      text: "Spiegels ingeklapt?\nAntenne verwijderd?"
      font_size: heading_font_size
      color: app.textColor

<ProgramSelectionHigh>:
  BaseLayout:
    id: selectionLayout
    Label:
      id: test_label
      text: "TEST"
      font_size: '20sp'
      color: error_color
      size_hint: None, None
      size: self.texture_size
      pos_hint: {'x': 0, 'top': 1.0}  # Position top-left corner
      opacity: 1 if app.TEST_MODE else 0  # Conditional visibility
    Label:
      text: "Spiegels ingeklapt?\nAntenne verwijderd?"
      font_size: default_font_size
      color: app.textColor

<PaymentMethod>:
  BaseLayout:
    Label:
      text: "Kies betaalmethode"
      font_size: heading_font_size
      color: app.textColor
    BorderedButton:
      text: "PIN"
      on_release:
        root.selectPin()
    BorderedButton:
      text: "Waspas"
      on_release:
        root.selectWashcard()
    BorderedButton:
      text: "Annuleren"
      on_release:
        root.cancel()        
<Payment>:
  BaseLayout:
    Label:
      text: "Voltooi betaling\nop PIN terminal"
      font_size: heading_font_size
      color: app.textColor
    BorderedButton:
      text: "Annuleren"
      on_release:
        root.cancel()

<PaymentWashcard>:
  BaseLayout:
    Label:
      text: "Houd waspas voor\nde lezer"
      font_size: heading_font_size
      color: app.textColor
    BorderedButton:
      text: "Annuleren"
      on_release:
        root.cancel() 
      
<UpgradeWashcardReadCard>:
  BaseLayout:
    Label:
      text: "Houd de waspas\nvoor de lezer"
      font_size: heading_font_size
      color: app.textColor
    BorderedButton:
      text: "Annuleren"
      on_release:
        root.cancel()

<UpgradeWashcardChooseAmount>:
  BaseLayout:
    BoxLayout:
      size: root.width, root.height
      orientation: 'horizontal'

      Label:
        text: "Saldo:"
        halign: 'right'
        text_size: self.size
        font_size: heading_font_size
        padding: [0,0,20,0]
        color: app.textColor

      Label:
        id: lbl_balance
        halign: 'left'
        text_size: self.size
        text: '----'
        font_size: heading_font_size
        padding: [20,0,0,0]
        color: app.textColor

    Label:
      text: "Kies bedrag"
      font_size: heading_font_size
      color: app.textColor

    BoxLayout:
      orientation: 'horizontal'

      BorderedButton:
        id: button_topup_20
        text: "€ 20,00"
        on_release:
          root.chooseAmount(20)
      BorderedButton:
        id: button_topup_50
        text: "€ 50,00"
        on_release:
          root.chooseAmount(50)

    BoxLayout:
      orientation: 'horizontal'

      BorderedButton:
        id: button_topup_100
        text: "€ 100,00"
        on_release:
          root.chooseAmount(100)
      BorderedButton:
        id: button_topup_200
        text: "€ 200,00"
        on_release:
          root.chooseAmount(200)

    BorderedButton:
      text: "Annuleren"
      on_release:
        root.cancel()

