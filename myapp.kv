<MyLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 20

    Label:
        id: label_id
        text: "Welcome to Kivy!"
        font_size: '20sp'
        size_hint_y: None
        height: self.texture_size[1] + 20

    Button:
        BoxLayout:
            pos: self.parent.pos
            size: self.parent.size
            # orientation: 'lr-tb'
            spacing: 10
            Label:
                size_hint: (0.8, 1)
                text: "PIN"
            Image:
                source: 'images/pin.png'
                size_hint_y: None
                height: self.parent.height
                pos_hint: {'top': 1}

    Button:
        BoxLayout:
            pos: self.parent.pos
            size: self.parent.size
            # orientation: 'lr-tb'
            spacing: 10
            Label:
                size_hint: (0.8, 1)
                text: "Waspas"
            Image:
                source: 'images/nfc.png'
                size_hint_y: None
                height: self.parent.height
