<MoveVehicle>:
  BaseLayout:
    Label:
      width: self.parent.width
      text: ""
      font_size: default_font_size
      color: app.textColor

    Image:
      source: 'arrow_up.png'

    Label:
      width: self.parent.width
      text: "Plaats auto in machine"
      font_size: heading_font_size
      color: app.textColor

    BorderedButton:
      text: "Waspas opwaarderen"
      on_release:
        root.upgrade_washcard()

