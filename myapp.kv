<MyLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 20

    Label:
        id: label_id
        text: "Welcome to Kivy!"
        font_size: '20sp'
        size_hint_y: None
        height: self.texture_size[1] + 20

    Button:
        background_normal: ''  # Disable the normal background
        background_down: ''    # Disable the down state background
        background_color: 1, 1, 1, 0  # Fully transparent background
        BoxLayout:
            pos: self.parent.pos
            size: self.parent.size
            # orientation: 'lr-tb'
            spacing: 10
            padding: 20
            Image:
                source: 'images/pin.png'
                size_hint_y: None
                height: self.parent.height - 40

    Button:
        background_normal: ''  # Disable the normal background
        background_down: ''    # Disable the down state background
        background_color: 1, 1, 1, 0  # Fully transparent background
        BoxLayout:
            pos: self.parent.pos
            size: self.parent.size
            # orientation: 'lr-tb'
            spacing: 10
            padding: 10
            Image:
                source: 'images/washcard.png'
                size_hint_y: None
                height: self.parent.height - 40
